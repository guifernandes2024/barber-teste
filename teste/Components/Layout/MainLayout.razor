@inherits LayoutComponentBase

<div class="page dark-theme">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <div class="d-flex align-items-center">
                <h4 class="mb-0 text-light">✂️ Barbearia - Admin</h4>
            </div>
            <div class="d-flex align-items-center">
                <AuthorizeView>
                    <Authorized>
                        <span class="text-light me-3">Olá, @context.User.Identity?.Name!</span>
                        <form action="Account/Logout" method="post" class="d-inline">
                            <AntiforgeryToken />
                            <button type="submit" class="btn btn-outline-light btn-sm">
                                <i class="fas fa-sign-out-alt me-1"></i>Sair
                            </button>
                        </form>
                    </Authorized>
                    <NotAuthorized>
                        <a href="Account/Login" class="btn btn-primary btn-sm">
                            <i class="fas fa-sign-in-alt me-1"></i>Login
                        </a>
                    </NotAuthorized>
                </AuthorizeView>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
