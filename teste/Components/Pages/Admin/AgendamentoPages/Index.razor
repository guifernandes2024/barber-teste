@page "/admin/agendamentos"
@attribute [Authorize]
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using teste.Models
@using teste.Data
@using System.Globalization

@rendermode InteractiveServer
<PageTitle>Agendamentos - Barbearia</PageTitle>

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1>üìÖ Agendamentos</h1>
                <a href="admin/agendamentos/create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Novo Agendamento
                </a>
            </div>
        </div>
    </div>

    <!-- Filtros -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">üîç Filtros</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <label class="form-label">Cliente:</label>
                            <input type="text" class="form-control" @bind="FiltroCliente" @bind:event="oninput" placeholder="Nome do cliente..." />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Data Inicial:</label>
                            <input type="date" class="form-control"
                                   value="@FiltroDataInicialString"
                                   @onchange="OnFiltroDataInicialChanged" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Data Final:</label>
                            <input type="date" class="form-control"
                                   value="@FiltroDataFinalString"
                                   @onchange="OnFiltroDataFinalChanged" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Servi√ßo:</label>
                            <select class="form-select" @bind="FiltroServicoId" @bind:event="onchange">
                                <option value="0">Todos os servi√ßos</option>
                                @if (TodosServicos != null)
                                {
                                    @foreach (var servico in TodosServicos)
                                    {
                                        <option value="@servico.Id">@servico.Nome</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-12">
                            <button class="btn btn-outline-secondary btn-sm" @onclick="LimparFiltros">
                                <i class="fas fa-times"></i> Limpar Filtros
                            </button>
                            <button class="btn btn-primary btn-sm ms-2" @onclick="FiltrarAgendamentos">
                                <i class="fas fa-search"></i> Filtrar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (AgendamentosFiltrados != null && AgendamentosFiltrados.Any())
    {
        <div class="row">
            @foreach (var agendamento in AgendamentosFiltrados.OrderBy(a => a.DataHora))
            {
                <div class="col-md-6 col-lg-4 mb-3">
                    <div class="card h-100">
                        <div class="card-header">
                            <div class="d-flex justify-content-between align-items-center">
                                <h6 class="mb-0">@agendamento.DataHora.ToString("dd/MM/yyyy")</h6>
                                <span class="badge bg-primary">@agendamento.DataHora.ToString("HH:mm")</span>
                            </div>
                        </div>
                        <div class="card-body">
                            <h6 class="card-title">@agendamento.NomeDoCliente</h6>
                            <p class="card-text">
                                <strong>Telefone:</strong> @agendamento.NumeroDoCliente<br/>
                                <strong>Servi√ßo:</strong> @(agendamento.Servico?.Nome ?? "N/A")<br/>
                                <strong>Dura√ß√£o:</strong> @(agendamento.Servico?.DuracaoEmMinutos ?? 0) min<br/>
                                <strong>Pre√ßo:</strong> R$ @(agendamento.Servico?.Preco.ToString("F2") ?? "0,00")
                            </p>
                            @if (!string.IsNullOrEmpty(agendamento.Observacoes))
                            {
                                <p class="card-text">
                                    <strong>Observa√ß√µes:</strong> @agendamento.Observacoes
                                </p>
                            }
                        </div>
                        <div class="card-footer">
                            <div class="btn-group w-100" role="group">
                                <a href="@($"agendamentos/edit?id={agendamento.Id}")" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                <a href="@($"agendamentos/details?id={agendamento.Id}")" class="btn btn-sm btn-outline-info">
                                    <i class="fas fa-eye"></i> Detalhes
                                </a>
                                <a href="@($"agendamentos/delete?id={agendamento.Id}")" class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash"></i> Excluir
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-info text-center">
                    <i class="fas fa-calendar-times fa-3x mb-3"></i>
                    <h5>Nenhum agendamento encontrado</h5>
                    <p>Clique em "Novo Agendamento" para criar o primeiro agendamento.</p>
                </div>
            </div>
        </div>
    }
</div>

