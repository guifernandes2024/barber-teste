@page "/cliente/logout-endpoint"
@using Microsoft.AspNetCore.Identity
@using BarberShopApp.Data
@inject SignInManager<ApplicationUser> SignInManager

<!DOCTYPE html>
<html>
<head>
    <title>Logout</title>
    <meta http-equiv="refresh" content="1;url=/">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #ffffff;
        }
        .logout-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .logout-card {
            background-color: #1a1a1a;
            border: 1px solid #333333;
            border-radius: 12px;
            padding: 40px;
            text-align: center;
            box-shadow: 0 10px 30px rgba(0,0,0,0.5);
            max-width: 400px;
        }
        .spinner-border {
            color: #3b82f6;
        }
        .text-dark {
            color: #ffffff !important;
        }
        .text-muted {
            color: #888888 !important;
        }
    </style>
</head>
<body>
    <div class="logout-container">
        <div class="logout-card">
            <div class="mb-4">
                <i class="fas fa-sign-out-alt fa-3x text-warning mb-3"></i>
            </div>
            <h3 class="text-dark mb-3">Fazendo logout...</h3>
            <div class="spinner-border mb-3" role="status">
                <span class="visually-hidden">Carregando...</span>
            </div>
            <p class="text-muted">Redirecionando para a página inicial...</p>
        </div>
    </div>
    
    <script>
        setTimeout(function() {
            window.location.href = '/';
        }, 500);
    </script>
</body>
</html>

@code {
    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        // Executar logout sempre que a página for acessada
        await SignInManager.SignOutAsync();
    }
}