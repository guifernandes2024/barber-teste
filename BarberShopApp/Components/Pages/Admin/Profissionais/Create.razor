@page "/admin/profissionais/create"
@attribute [Authorize(Roles = "Admin")]
@using Microsoft.EntityFrameworkCore
@using BarberShopApp.Core.Models
@using BarberShopApp.Data
@using Microsoft.AspNetCore.Identity
@using System.ComponentModel.DataAnnotations
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject UserManager<ApplicationUser> UserManager
@inject NavigationManager Navigation

@rendermode InteractiveServer
<PageTitle>Criar Profissional - Admin</PageTitle>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="card-title mb-0">
                            <i class="fas fa-user-tie me-2"></i>Criar Novo Profissional
                        </h3>
                        <a href="/admin/profissionais" class="btn btn-outline-light btn-sm">
                            <i class="fas fa-arrow-left me-1"></i>Voltar
                        </a>
                    </div>
                </div>
                <div class="card-body p-4">
                    @if (!string.IsNullOrEmpty(mensagemErro))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            @mensagemErro
                            <button type="button" class="btn-close" @onclick="() => mensagemErro = null"></button>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(mensagemSucesso))
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @mensagemSucesso
                            <button type="button" class="btn-close" @onclick="() => mensagemSucesso = null"></button>
                        </div>
                    }

                    <EditForm Model="profissionalModel" OnValidSubmit="ProcessCreate" FormName="ProfissionalCreateForm">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="nome" class="form-label">Nome Completo *</label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-user"></i>
                                        </span>
                                        <InputText id="nome" class="form-control" @bind-Value="profissionalModel.Nome" 
                                                 placeholder="Nome completo do profissional" />
                                    </div>
                                    <ValidationMessage For="@(() => profissionalModel.Nome)" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="email" class="form-label">Email *</label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-envelope"></i>
                                        </span>
                                        <InputText id="email" class="form-control" @bind-Value="profissionalModel.Email" 
                                                 type="email" placeholder="profissional@email.com" />
                                    </div>
                                    <ValidationMessage For="@(() => profissionalModel.Email)" />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="telefone" class="form-label">Telefone *</label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-phone"></i>
                                        </span>
                                        <InputText id="telefone" class="form-control" @bind-Value="profissionalModel.Telefone" 
                                                 placeholder="(11) 99999-9999" />
                                    </div>
                                    <ValidationMessage For="@(() => profissionalModel.Telefone)" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="dataNascimento" class="form-label">Data de Nascimento *</label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-calendar"></i>
                                        </span>
                                        <InputDate id="dataNascimento" class="form-control" @bind-Value="profissionalModel.DataNascimento" />
                                    </div>
                                    <ValidationMessage For="@(() => profissionalModel.DataNascimento)" />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="tipoDocumento" class="form-label">Tipo de Documento *</label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-id-card"></i>
                                        </span>
                                        <InputSelect id="tipoDocumento" class="form-control" @bind-Value="profissionalModel.TipoDocumento">
                                            <option value="">Selecione...</option>
                                            <option value="@DocumentType.CPF">CPF</option>
                                            <option value="@DocumentType.RG">RG</option>
                                            <option value="@DocumentType.CNH">CNH</option>
                                        </InputSelect>
                                    </div>
                                    <ValidationMessage For="@(() => profissionalModel.TipoDocumento)" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="documento" class="form-label">Número do Documento *</label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-id-badge"></i>
                                        </span>
                                        <InputText id="documento" class="form-control" @bind-Value="profissionalModel.Documento" 
                                                 placeholder="123.456.789-00" />
                                    </div>
                                    <ValidationMessage For="@(() => profissionalModel.Documento)" />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="percentualComissao" class="form-label">Percentual de Comissão (%) *</label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-percentage"></i>
                                        </span>
                                        <InputNumber id="percentualComissao" class="form-control" @bind-Value="profissionalModel.PercentualComissao" 
                                                   min="0" max="100" step="0.1" />
                                    </div>
                                    <ValidationMessage For="@(() => profissionalModel.PercentualComissao)" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="imgUrl" class="form-label">URL da Imagem</label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-image"></i>
                                        </span>
                                        <InputText id="imgUrl" class="form-control" @bind-Value="profissionalModel.ImgUrl" 
                                                 placeholder="https://exemplo.com/foto.jpg" />
                                    </div>
                                    <ValidationMessage For="@(() => profissionalModel.ImgUrl)" />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="password" class="form-label">Senha *</label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-lock"></i>
                                        </span>
                                        <InputText type="password" id="password" class="form-control" 
                                                 @bind-Value="profissionalModel.Password" placeholder="Senha do profissional" />
                                        <button type="button" class="btn btn-outline-secondary" @onclick="TogglePasswordVisibility">
                                            <i class="fas @(showPassword ? "fa-eye-slash" : "fa-eye")"></i>
                                        </button>
                                    </div>
                                    <ValidationMessage For="@(() => profissionalModel.Password)" />
                                    <small class="form-text text-muted">
                                        A senha deve ter pelo menos 6 caracteres
                                    </small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="confirmPassword" class="form-label">Confirmar Senha *</label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-lock"></i>
                                        </span>
                                        <InputText type="password" id="confirmPassword" class="form-control" 
                                                 @bind-Value="profissionalModel.ConfirmPassword" placeholder="Confirme a senha" />
                                    </div>
                                    <ValidationMessage For="@(() => profissionalModel.ConfirmPassword)" />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <div class="form-check">
                                        <InputCheckbox id="fumante" class="form-check-input" @bind-Value="profissionalModel.Fumante" />
                                        <label class="form-check-label" for="fumante">
                                            É fumante?
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="especialidades" class="form-label">Especialidades</label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-scissors"></i>
                                        </span>
                                        <InputText id="especialidades" class="form-control" @bind-Value="profissionalModel.Especialidades" 
                                                 placeholder="Corte, Barba, Hidratação..." />
                                    </div>
                                    <small class="form-text text-muted">
                                        Separe as especialidades por vírgula
                                    </small>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mb-3">
                            <button type="submit" class="btn btn-primary btn-lg" disabled="@isLoading">
                                @if (isLoading)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                    <span>Criando...</span>
                                }
                                else
                                {
                                    <i class="fas fa-user-tie me-2"></i>
                                    <span>Criar Profissional</span>
                                }
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private ProfissionalModel profissionalModel = new();
    private bool isLoading = false;
    private string? mensagemErro;
    private string? mensagemSucesso;
    private bool showPassword = false;

    private async Task ProcessCreate()
    {
        if (isLoading) return;
        
        isLoading = true;
        mensagemErro = null;
        mensagemSucesso = null;

        try
        {
            // Verificar se as senhas coincidem
            if (profissionalModel.Password != profissionalModel.ConfirmPassword)
            {
                mensagemErro = "As senhas não coincidem.";
                isLoading = false;
                return;
            }

            // Verificar se o email já existe
            var existingUser = await UserManager.FindByEmailAsync(profissionalModel.Email);
            if (existingUser != null)
            {
                mensagemErro = "Este email já está cadastrado. Use outro email.";
                isLoading = false;
                return;
            }

            // Criar novo usuário
            var user = new ApplicationUser
            {
                UserName = profissionalModel.Email,
                Email = profissionalModel.Email,
                Nome = profissionalModel.Nome,
                PhoneNumber = profissionalModel.Telefone,
                EmailConfirmed = true,
                CreatedAt = DateTime.Now
            };

            var result = await UserManager.CreateAsync(user, profissionalModel.Password);

            if (result.Succeeded)
            {
                // Adicionar o usuário ao role "Profissional"
                await UserManager.AddToRoleAsync(user, "Profissional");
                
                // Criar registro Profissional
                using var context = DbFactory.CreateDbContext();
                var profissional = new Profissional
                {
                    DataNacimento = profissionalModel.DataNascimento,
                    TipoDocumento = profissionalModel.TipoDocumento,
                    Documento = profissionalModel.Documento,
                    Fumante = profissionalModel.Fumante,
                    ImgUrl = profissionalModel.ImgUrl,
                    PercentualDeComissao = profissionalModel.PercentualComissao,
                    DataAtualizacao = DateTime.Now,
                    Agendamentos = new List<Agendamento>()
                };
                
                context.Profissional.Add(profissional);
                await context.SaveChangesAsync();

                // Atualizar o usuário com o ProfissionalId
                user.ProfissionalId = profissional.Id;
                await UserManager.UpdateAsync(user);
                
                mensagemSucesso = "Profissional criado com sucesso!";
                
                // Limpar formulário
                profissionalModel = new();
                
                // Redirecionar após 2 segundos
                await Task.Delay(2000);
                Navigation.NavigateTo("/admin/profissionais");
            }
            else
            {
                mensagemErro = string.Join(", ", result.Errors.Select(e => e.Description));
            }
        }
        catch (Exception ex)
        {
            mensagemErro = $"Erro ao criar profissional: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void TogglePasswordVisibility()
    {
        showPassword = !showPassword;
        StateHasChanged();
    }

    public class ProfissionalModel
    {
        [Required(ErrorMessage = "Nome é obrigatório")]
        [StringLength(100, ErrorMessage = "O nome deve ter no máximo {1} caracteres.")]
        public string Nome { get; set; } = "";

        [Required(ErrorMessage = "Email é obrigatório")]
        [EmailAddress(ErrorMessage = "Email inválido")]
        public string Email { get; set; } = "";

        [Required(ErrorMessage = "Telefone é obrigatório")]
        [StringLength(20, ErrorMessage = "O telefone deve ter no máximo {1} caracteres.")]
        public string Telefone { get; set; } = "";

        [Required(ErrorMessage = "Data de nascimento é obrigatória")]
        public DateTime DataNascimento { get; set; } = DateTime.Today;

        [Required(ErrorMessage = "Tipo de documento é obrigatório")]
        public DocumentType TipoDocumento { get; set; }

        [Required(ErrorMessage = "Documento é obrigatório")]
        [StringLength(20, ErrorMessage = "O documento deve ter no máximo {1} caracteres.")]
        public string Documento { get; set; } = "";

        [Required(ErrorMessage = "Percentual de comissão é obrigatório")]
        [Range(0, 100, ErrorMessage = "O percentual deve estar entre 0 e 100")]
        public decimal PercentualComissao { get; set; } = 50;

        public string? ImgUrl { get; set; }

        public bool Fumante { get; set; } = false;

        public string? Especialidades { get; set; }

        [Required(ErrorMessage = "Senha é obrigatória")]
        [StringLength(100, ErrorMessage = "A senha deve ter pelo menos {2} caracteres.", MinimumLength = 6)]
        public string Password { get; set; } = "";

        [Required(ErrorMessage = "Confirmação de senha é obrigatória")]
        [Compare("Password", ErrorMessage = "As senhas não coincidem")]
        public string ConfirmPassword { get; set; } = "";
    }
}
