@inherits LayoutComponentBase

<div class="landing-layout">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-cut me-2"></i>BarberShop
            </a>
            
            <!-- Botão Toggle Bootstrap -->
            <button class="navbar-toggler" type="button" onclick="toggleMobileMenu()">
                <span class="navbar-toggler-icon"></span>
            </button>
            

            <!-- Desktop Menu -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#servicos">Serviços</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#agendamento">Agendar</a>
                    </li>
                    <li class="nav-item">
                        <AuthorizeView Context="outerContext">
                            <NotAuthorized>
                                <div class="d-flex gap-3 align-items-center">
                                    <a href="/cliente/login" class="btn btn-primary rounded-pill px-4 py-2 shadow-sm">
                                        <i class="fas fa-sign-in-alt me-2"></i>Entrar
                                    </a>
                                    <a href="/cliente/register" class="btn btn-outline-light rounded-pill px-4 py-2 border-0">
                                        <i class="fas fa-user-plus me-2"></i>Cadastrar
                                    </a>
                                </div>
                            </NotAuthorized>
                            <Authorized>
                                <AuthorizeView Roles="Cliente" Context="clienteContext">
                                    <div class="d-flex gap-3 align-items-center">
                                        <a href="/cliente/meus-agendamentos" class="btn btn-outline-light rounded-pill px-4 py-2 border-0 shadow-sm">
                                            <i class="fas fa-calendar-check me-2"></i>Meus Agendamentos
                                        </a>
                                        <a href="#" onclick="showLogoutModal(); return false;" class="btn btn-outline-danger rounded-pill px-4 py-2 border-0">
                                            <i class="fas fa-sign-out-alt me-2"></i>Sair
                                        </a>
                                    </div>
                                </AuthorizeView>
                                <AuthorizeView Roles="Admin,Profissional" Context="adminContext">
                                    <div class="d-flex gap-3 align-items-center">
                                        <a href="/admin" class="btn btn-outline-light rounded-pill px-4 py-2 border-0 shadow-sm">
                                            <i class="fas fa-tachometer-alt me-2"></i>Painel Admin
                                        </a>
                                        <a href="#" onclick="showLogoutModal(); return false;" class="btn btn-outline-danger rounded-pill px-4 py-2 border-0">
                                            <i class="fas fa-sign-out-alt me-2"></i>Sair
                                        </a>
                                    </div>
                                </AuthorizeView>
                            </Authorized>
                        </AuthorizeView>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    
    <main>
        @Body
    </main>
</div>