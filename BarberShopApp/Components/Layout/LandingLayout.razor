@inherits LayoutComponentBase

<div class="landing-layout">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-cut me-2"></i>BarberShop
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#servicos">Serviços</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#agendamento">Agendar</a>
                    </li>
                    <li class="nav-item">
                        <AuthorizeView>
                            <NotAuthorized>
                                <a href="Account/Login" class="btn btn-primary btn-sm ms-2">
                                    <i class="fas fa-sign-in-alt me-1"></i>Login
                                </a>
                            </NotAuthorized>
                            <Authorized>
                                <a href="/admin" class="btn btn-outline-light btn-sm ms-2">
                                    <i class="fas fa-tachometer-alt me-1"></i>Painel
                                </a>
                            </Authorized>
                        </AuthorizeView>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    
    <main>
        @Body
    </main>
</div>