    <script src="/js/scrollHelpers.js"></script>
    <script src="/js/phoneMask.js"></script>
    <script src="https://unpkg.com/imask"></script>
    <script>
        window.aplicarMascaraPreco = function (elementId) {
            var element = document.getElementById(elementId);
            if (!element) return;

            var maskOptions = {
                mask: Number,
                scale: 2,
                signed: false,
                thousandsSeparator: '.',
                padFractionalZeros: true,
                normalizeZeros: true,
                radix: ',',
                mapToRadix: ['.']
            };

            IMask(element, maskOptions);
        };

        // Função para ser chamada pelo Blazor após renderização
        window.reinitializePhoneMasks = function() {
            if (typeof initializePhoneMasks === 'function') {
                initializePhoneMasks();
            }
        };
    </script>

</body>

